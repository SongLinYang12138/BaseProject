<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:background="@color/white_back">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="3dp"
            android:gravity="center_vertical"
            android:background="@color/login_et_back"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"

    >

        <LinearLayout
                android:id="@+id/search_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >

            <com.bondex.ysl.liblibrary.ui.IconText

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search"
                    android:padding="5dp"
                    android:textSize="@dimen/icon_normal"
                    android:textColor="@color/text_gray"
                    android:layout_centerInParent="true"
            />

        </LinearLayout>


        <EditText
                android:id="@+id/search_editext"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="numberDecimal"
                android:paddingHorizontal="@dimen/activity_horizontal_margin"
                style="@style/normal_tv_gray"
                android:hint="请输入查询条件"
                android:singleLine="true"
        />

        <ImageView
                android:id="@+id/search_iv_clear"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:src="@drawable/clean_edit"

        />


    </LinearLayout>


</LinearLayout>