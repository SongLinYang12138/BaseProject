<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".workbench.WorkBetchActivity">

    <data>
        <variable name="workBetchViewModel" type="com.bondex.ysl.battledore.workbench.WorkBetchViewModle"/>

    </data>


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_gray"
    >

        <include android:id="@+id/title" layout="@layout/base_title"></include>


        <ImageButton
                android:id="@+id/work_bt_last"
                app:layout_constraintTop_toTopOf="@id/work_bt_save"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/colorPrimary"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/work_bt_save"
                android:src="@mipmap/last"
                android:scaleType="fitXY"
        >

        </ImageButton>

        <ImageButton
                android:id="@+id/work_bt_save"
                app:layout_constraintTop_toBottomOf="@id/title"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@color/metal_gray"
                android:src="@mipmap/save"
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                app:layout_constraintLeft_toRightOf="@id/work_bt_last"
                app:layout_constraintRight_toLeftOf="@id/work_bt_next"
        >

        </ImageButton>

        <ImageButton
                android:id="@+id/work_bt_next"
                app:layout_constraintTop_toTopOf="@id/work_bt_save"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintLeft_toRightOf="@id/work_bt_save"
                android:background="@color/colorPrimary"
                android:src="@mipmap/next"
                app:layout_constraintRight_toRightOf="parent"
                android:scaleType="fitXY"
        >

        </ImageButton>


        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/top"
                android:layout_height="wrap_content"
                android:background="@color/white_back"
                android:layout_marginTop="@dimen/margin_small"
                app:layout_constraintTop_toBottomOf="@id/work_bt_save"
                android:paddingVertical="@dimen/activity_horizontal_margin"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        >


            <TextView
                    android:id="@+id/work_battle_unit_flight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/margin_small"
                    app:layout_constraintLeft_toLeftOf="@id/work_battle_flight"
                    style="@style/small_tv_gray"
                    android:text="航班号"

            />

            <TextView
                    android:id="@+id/work_unit_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:met_floatingLabel="normal"
                    app:layout_constraintTop_toTopOf="@id/work_battle_unit_flight"
                    style="@style/small_tv_gray"
                    android:text="目的港"

                    app:layout_constraintLeft_toLeftOf="@id/work_battle_detination"
                    app:layout_constraintRight_toRightOf="@id/work_battle_detination"
            />

            <TextView
                    android:id="@+id/work_unit_flight_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/work_battle_unit_flight"
                    style="@style/small_tv_gray"
                    android:text="航班日期"
                    app:layout_constraintRight_toRightOf="@id/work_battle_flight_date"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
            />

            <EditText
                    android:id="@+id/work_battle_flight"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/work_battle_unit_flight"
                    android:layout_height="25dp"
                    android:minWidth="@dimen/min_width"
                    style="@style/normal_tv_black"
                    android:textStyle="bold"
                    android:inputType="textEmailAddress"
                    android:text="MU9929"
                    android:background="@color/transparent"
                    android:layout_marginTop="@dimen/main_small"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    app:layout_constraintRight_toLeftOf="@id/work_battle_detination"
            />

            <EditText
                    android:id="@+id/work_battle_detination"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/work_battle_flight"
                    app:layout_constraintLeft_toRightOf="@id/work_battle_flight"
                    android:layout_height="25dp"
                    android:minWidth="@dimen/min_width"
                    style="@style/normal_tv_black"
                    android:inputType="textEmailAddress"

                    android:textStyle="bold"
                    android:text="LUX"
                    android:background="@color/transparent"
                    android:textAlignment="center"
                    app:layout_constraintRight_toLeftOf="@id/work_battle_flight_date"
            />


            <EditText
                    android:id="@+id/work_battle_flight_date"
                    android:layout_width="wrap_content"

                    app:layout_constraintTop_toTopOf="@id/work_battle_flight"
                    app:layout_constraintLeft_toRightOf="@id/work_battle_detination"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_height="25dp"
                    android:minWidth="@dimen/min_width"
                    style="@style/normal_tv_black"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:focusable="false"
                    android:text="2019-07-09"
                    android:background="@color/transparent"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"

            />


            <TextView

                    android:id="@+id/work_unit_plate_num"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/work_battle_flight"
                    app:layout_constraintLeft_toLeftOf="@id/work_battle_unit_flight"
                    android:layout_height="wrap_content"
                    style="@style/small_tv_gray"
                    android:text="板号"
            />

            <EditText
                    android:id="@+id/work_plate_num"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:minWidth="60dp"
                    android:inputType="textEmailAddress"

                    app:layout_constraintTop_toBottomOf="@id/work_unit_plate_num"
                    app:layout_constraintLeft_toLeftOf="@id/work_battle_flight"
                    style="@style/normal_tv_black"
                    android:textStyle="bold"
                    android:text="LSJL5"
                    android:background="@color/transparent"
            />


            <TextView

                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/work_unit_plate_num"
                    android:layout_height="wrap_content"
                    style="@style/small_tv_gray"
                    android:text="板型"
                    app:layout_constraintLeft_toLeftOf="@id/work_unit_destination"
            />

            <Spinner android:layout_width="70dp"
                     android:layout_height="wrap_content"
                     android:id="@+id/work_plate_type"
                     android:entries="@array/plate_type"
                     app:layout_constraintTop_toTopOf="@id/work_plate_num"
                     app:layout_constraintLeft_toLeftOf="@id/work_unit_destination"
                     android:layout_marginBottom="@dimen/activity_horizontal_margin"
            ></Spinner>


            <TextView

                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/work_unit_plate_num"
                    android:layout_height="wrap_content"
                    style="@style/small_tv_gray"
                    android:text="打板日期"
                    app:layout_constraintLeft_toLeftOf="@id/work_unit_flight_date"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"

            />

            <EditText
                    android:id="@+id/work_battle_date"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:minWidth="@dimen/min_width"
                    app:layout_constraintTop_toTopOf="@id/work_plate_num"
                    app:layout_constraintLeft_toLeftOf="@id/work_battle_flight_date"
                    style="@style/normal_tv_black"
                    android:textAlignment="center"
                    android:text="2017-07-09"
                    android:textStyle="bold"
                    android:hint="打板日期"
                    android:focusable="false"
                    android:background="@color/transparent"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"

            />

            <TextView

                    android:id="@+id/work_unit_plate_lock"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/work_unit_plate_num"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/work_unit_plate_num"
                    app:layout_constraintRight_toLeftOf="@id/work_unit_destination"
                    style="@style/small_tv_gray"
                    android:text="板锁号"
                    tools:layout_editor_absoluteX="13dp"/>

            <EditText
                    android:id="@+id/work_plate_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:minWidth="60dp"
                    app:layout_constraintTop_toBottomOf="@id/work_unit_plate_lock"
                    style="@style/normal_tv_black"
                    android:inputType="textEmailAddress"
                    app:layout_constraintLeft_toRightOf="@id/work_plate_num"
                    app:layout_constraintRight_toLeftOf="@id/work_plate_type"
                    android:textStyle="bold"
                    android:text="4545"
                    android:background="@color/transparent"
            />


        </android.support.constraint.ConstraintLayout>

        <TextView

                android:id="@+id/work_unit_main"
                app:layout_constraintTop_toBottomOf="@id/top"
                style="@style/normal_tv_primary"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.17"
                android:textAlignment="center"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content"
                android:text="主单号"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
        />
        <ImageView

                android:id="@+id/work_it_main"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="@id/work_unit_main"
                app:layout_constraintBottom_toBottomOf="@id/work_unit_main"
                app:layout_constraintLeft_toRightOf="@id/work_unit_main"
                android:src="@mipmap/scan"

        />


        <TextView

                android:id="@+id/work_unit_hawb"
                style="@style/normal_tv_primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="分单号"
                app:layout_constraintWidth_percent="0.17"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="@id/work_unit_main"
                app:layout_constraintLeft_toRightOf="@id/work_it_main"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.05"
        />
        <ImageView

                android:id="@+id/work_it_hawb"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="@id/work_unit_main"
                app:layout_constraintBottom_toBottomOf="@id/work_unit_main"
                app:layout_constraintLeft_toRightOf="@id/work_unit_hawb"
                android:src="@mipmap/scan"
        />


        <TextView

                android:id="@+id/work_unit_qty"
                style="@style/normal_tv_primary"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="件数"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="@id/work_unit_main"
                app:layout_constraintLeft_toRightOf="@id/work_it_hawb"
        />


        <TextView

                android:id="@+id/work_unit_all_qty"
                style="@style/normal_tv_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总件数"
                app:layout_constraintTop_toTopOf="@id/work_unit_main"
                app:layout_constraintLeft_toRightOf="@id/work_unit_qty"

        />


        <android.support.v7.widget.RecyclerView
                android:id="@+id/work_recycleview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintTop_toBottomOf="@id/work_unit_main"
                android:clickable="false"
                app:layout_constraintBottom_toTopOf="@id/second_bottom"
        >
        </android.support.v7.widget.RecyclerView>

        <android.support.constraint.ConstraintLayout
                android:id="@+id/second_bottom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:background="@color/white_back"
                app:layout_constraintBottom_toTopOf="@id/bottom"
                android:layout_marginBottom="@dimen/margin_small"
        >


            <android.support.v7.widget.RecyclerView
                    android:id="@+id/work_protect_type_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginBottom="@dimen/margin_small"
                    app:layout_constraintBottom_toTopOf="@id/work_subplate_recyclerView"
                    android:clickable="false"
            >


            </android.support.v7.widget.RecyclerView>


            <android.support.v7.widget.RecyclerView
                    android:id="@+id/work_subplate_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"

                    app:layout_constraintBottom_toBottomOf="parent"
                    android:clickable="false"
            >


            </android.support.v7.widget.RecyclerView>

        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
                android:id="@+id/bottom"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/bottom_background"
        ></android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</layout>