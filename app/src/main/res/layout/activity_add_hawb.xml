<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

>
    <data>
        <variable name="addHawbViewModel" type="com.bondex.ysl.battledore.addhawb.AddHawbViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/background_gray"
            android:layout_height="match_parent">


        <include layout="@layout/base_title" android:id="@+id/title"></include>

        <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/add_hawb_ck"
                app:layout_constraintTop_toTopOf="@id/add_hawb_tv_list"
                app:layout_constraintBottom_toBottomOf="@id/add_hawb_tv_list"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                app:layout_constraintLeft_toLeftOf="parent"
                style="@style/primary_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/add_hawb_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加"
                style="@style/button_gray_theme"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/add_hawb_edit"
                android:layout_marginTop="@dimen/margin_small"
        />


        <Button
                android:id="@+id/add_hawb_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                style="@style/button_primary_theme"
                app:layout_constraintTop_toTopOf="@id/add_hawb_add"
                app:layout_constraintLeft_toRightOf="@id/add_hawb_add"
                app:layout_constraintRight_toRightOf="parent"
        />

        <View
                android:id="@+id/lin1"
                app:layout_constraintTop_toBottomOf="@id/add_hawb_edit"
                android:layout_width="match_parent"
                android:background="@color/white_back"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_height="5dp"/>


        <TextView
                android:id="@+id/add_hawb_tv_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="3dp"
                app:layout_constraintTop_toBottomOf="@id/lin1"
                android:text="计划清单"
                style="@style/normal_tv_gray"
                android:textAlignment="center"
        />
        <android.support.v7.widget.RecyclerView
                android:id="@+id/add_hawb_plan"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/add_hawb_tv_plan"
                android:layout_height="0dp"
                android:background="@color/background_gray"
                app:layout_constraintHeight_percent="0.22"
                app:layout_constraintBottom_toTopOf="@id/add_hawb_tv_list"
                android:layout_marginBottom="@dimen/margin_small"
        ></android.support.v7.widget.RecyclerView>
        <TextView
                android:id="@+id/add_hawb_tv_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/margin_small"
                app:layout_constraintTop_toBottomOf="@id/add_hawb_plan"
                android:text="新增清单"
                style="@style/normal_tv_gray"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="0dp"/>


        <com.bondex.ysl.battledore.ui.MenuList
                android:id="@+id/add_hawb_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/add_hawb_tv_list"
                android:paddingVertical="@dimen/margin_small"
                android:background="@color/white_back"
        >

        </com.bondex.ysl.battledore.ui.MenuList>
        <com.bondex.ysl.liblibrary.ui.SearchView
                android:id="@+id/add_hawb_search"
                app:layout_constraintTop_toBottomOf="@id/add_hawb_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </com.bondex.ysl.liblibrary.ui.SearchView>
        <View android:layout_width="match_parent"
              android:layout_height="1dp"
        android:background="@color/white_back"
              android:id="@+id/line3"
              app:layout_constraintTop_toBottomOf="@id/add_hawb_search"
        />
        <android.support.v7.widget.RecyclerView

                android:id="@+id/add_hawb_list"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/line3"
                android:layout_height="0dp"
                android:background="@color/background_gray"
                app:layout_constraintBottom_toTopOf="@id/lin2"
                app:layout_constraintHorizontal_weight="1"
        ></android.support.v7.widget.RecyclerView>

        <View
                android:id="@+id/lin2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="30dp"/>

    </android.support.constraint.ConstraintLayout>
</layout>