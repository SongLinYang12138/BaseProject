<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="@color/background_gray"
>

    <include android:id="@+id/title" layout="@layout/base_title">
    </include>

    <TextView
            android:layout_width="wrap_content"
            style="@style/normal_tv_black"
            android:text="选择机场"
            android:layout_height="wrap_content"
            android:id="@+id/choose_city_tv_name"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginTop="150dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
    />
    <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/choose_city_sp"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="@id/choose_city_tv_name"
            app:layout_constraintBottom_toBottomOf="@id/choose_city_tv_name"
            app:layout_constraintLeft_toRightOf="@id/choose_city_tv_name"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content">

    </android.support.v7.widget.AppCompatSpinner>

    <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/choose_city_bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/background_gray"
            app:layout_constraintTop_toBottomOf="@id/choose_city_sp"
            android:layout_marginTop="120dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
    >
        <TextView android:layout_width="wrap_content"
                  style="@style/normal_tv_gray"
                  android:text="取消"
                  android:layout_centerInParent="true"
                  android:layout_height="wrap_content"/>

    </com.gc.materialdesign.views.ButtonRectangle>

    <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/choose_city_bt_confirm"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="@id/choose_city_bt_cancel"
            app:layout_constraintLeft_toRightOf="@id/choose_city_bt_cancel"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
    >
        <TextView android:layout_width="wrap_content"
                  style="@style/normal_tv_white"
                  android:text="确定"
                  android:layout_centerInParent="true"
                  android:layout_height="wrap_content"/>

    </com.gc.materialdesign.views.ButtonRectangle>

</android.support.constraint.ConstraintLayout>