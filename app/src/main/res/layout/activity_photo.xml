<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".photo.PhotoActivity">


    <data>
        <variable name="photoViewModel" type="com.bondex.ysl.battledore.photo.PhotoViewModel"/>

    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <include android:id="@+id/title" layout="@layout/base_title"></include>


        <android.support.v7.widget.RecyclerView

                android:id="@+id/photo_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintBottom_toBottomOf="parent"
        ></android.support.v7.widget.RecyclerView>


    </android.support.constraint.ConstraintLayout>

</layout>