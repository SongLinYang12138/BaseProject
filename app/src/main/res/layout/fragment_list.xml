<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".list.ListFragment">

    <data>

        <variable name="listViewModel" type="com.bondex.ysl.battledore.list.ListViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_gray"
    >


        <CheckBox
                android:id="@+id/list_chck_all"
                android:layout_width="wrap_content"
                android:theme="@style/primary_checkbox"
                app:layout_constraintTop_toTopOf="@id/list_commit"
                app:layout_constraintBottom_toBottomOf="@id/list_commit"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content"/>

        <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/list_commit"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_height="50dp"
                app:layout_constraintLeft_toRightOf="@id/list_chck_all"
                app:layout_constraintRight_toLeftOf="@id/list_cancel"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
        >
            <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="提交"
                    style="@style/small_tv_white"
            />

        </com.gc.materialdesign.views.ButtonRectangle>

        <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/list_cancel"
                app:layout_constraintTop_toTopOf="@id/list_commit"
                android:layout_width="wrap_content"
                android:background="@color/metal_gray"
                android:layout_height="50dp"
                app:layout_constraintLeft_toRightOf="@id/list_commit"
                app:layout_constraintRight_toLeftOf="@id/list_edit"
        >

            <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="删除"
                    style="@style/small_tv_gray"
            />

        </com.gc.materialdesign.views.ButtonRectangle>

        <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/list_edit"
                app:layout_constraintTop_toTopOf="@id/list_commit"
                android:layout_width="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_height="50dp"
                app:layout_constraintLeft_toRightOf="@id/list_cancel"
                app:layout_constraintRight_toRightOf="parent"
        >

            <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="编辑"
                    style="@style/small_tv_white"
            />

        </com.gc.materialdesign.views.ButtonRectangle>
        <com.bondex.ysl.battledore.ui.MenuList
                android:id="@+id/list_menulist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_back"
                app:layout_constraintTop_toBottomOf="@id/list_commit"
                android:paddingVertical="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
        >
        </com.bondex.ysl.battledore.ui.MenuList>
        <com.bondex.ysl.liblibrary.ui.SearchView
                android:id="@+id/list_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/list_menulist"

        ></com.bondex.ysl.liblibrary.ui.SearchView>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/list_search"

                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/white_back"
                app:layout_constraintVertical_weight="1"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
        ></android.support.v7.widget.RecyclerView>

    </android.support.constraint.ConstraintLayout>


</layout>