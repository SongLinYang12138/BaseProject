<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:id="@+id/plan_cl_content"
        android:background="@color/background_gray"

>


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              style="@style/normal_tv_black"
              android:textStyle="bold"
              android:text="3M4H"
              app:layout_constraintLeft_toRightOf="@id/item_plan_ck"
              android:id="@+id/item_plan_all"
              android:layout_marginTop="@dimen/activity_horizontal_margin"
    />


    <TextView
            android:id="@+id/item_plan_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/normal_tv_black"
            android:textStyle="bold"
            android:text="4件"
            app:layout_constraintTop_toTopOf="@id/item_plan_all"
            app:layout_constraintLeft_toRightOf="@id/item_plan_all"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

    />

    <TextView
            android:id="@+id/item_plan_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/normal_tv_black"
            android:textStyle="bold"
            android:text="390kg   30m³"
            app:layout_constraintTop_toTopOf="@id/item_plan_all"
            app:layout_constraintLeft_toRightOf="@id/item_plan_qty"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
    />

    <TextView
            android:id="@+id/item_plan_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/normal_tv_gray"
            android:text="航班日期:2019-05-21"
            app:layout_constraintTop_toTopOf="@id/item_plan_destination"
            app:layout_constraintBottom_toBottomOf="@id/item_plan_destination"
            app:layout_constraintRight_toLeftOf="@id/item_plan_line"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/margin_small"
    />

    <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/item_plan_ck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/primary_checkbox"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
            android:id="@+id/item_plan_flight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/small_tv_primary"
            android:text="CA9229"
            app:layout_constraintTop_toBottomOf="@id/item_plan_all"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            app:layout_constraintLeft_toRightOf="@id/item_plan_ck"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            app:layout_constraintBottom_toBottomOf="parent"
    />


    <TextView
            android:id="@+id/item_plan_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/small_tv_primary"
            android:text="LUX"
            app:layout_constraintTop_toTopOf="@id/item_plan_flight"
            app:layout_constraintLeft_toRightOf="@id/item_plan_flight"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
    />


    <LinearLayout
            android:id="@+id/item_plan_line"

            android:layout_width="1dp"
            android:background="@color/metal_gray"
            android:layout_height="100dp"
            android:orientation="horizontal"
            app:layout_constraintRight_toLeftOf="@id/item_plan_add"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    >


    </LinearLayout>

    <com.bondex.ysl.liblibrary.ui.IconText
            android:id="@+id/item_plan_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/icon"
            android:textColor="@color/colorPrimary"
            android:text="@string/add"
            app:layout_constraintBottom_toBottomOf="@id/item_plan_line"

    />

    <!--<Button android:id="@+id/item_plan_bt_goodslist"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="40dp"-->
    <!--style="@style/button_gray_theme"-->
    <!--app:layout_constraintRight_toRightOf="parent"-->
    <!--android:visibility="gone"-->
    <!--android:text="货物清单"-->
    <!--/>-->

</android.support.constraint.ConstraintLayout>