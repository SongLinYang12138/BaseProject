<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:paddingVertical="@dimen/padding_small"
>


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              style="@style/normal_tv_red"
              app:layout_constraintLeft_toLeftOf="parent"
              android:text="2019-5-21"
              android:id="@+id/item_plan_date"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              style="@style/normal_tv_red"
              android:text="剩余6板  总计10板"
              app:layout_constraintLeft_toRightOf="@id/item_plan_date"
              android:id="@+id/item_plan_remain"
              app:layout_constraintRight_toRightOf="parent"
    />


    <TextView
            android:id="@+id/item_plan_total"
            app:layout_constraintTop_toBottomOf="@id/item_plan_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_small"
            style="@style/normal_tv_black"
            android:text="3M4H 4件 390kg"
            app:layout_constraintLeft_toLeftOf="parent"
    />

    <TextView
            android:id="@+id/item_plan_flight"
            app:layout_constraintTop_toBottomOf="@id/item_plan_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/normal_tv_black"
            android:text="航班号：34mdawwsd"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/main_small"
    />

    <ImageView
            android:id="@+id/item_plan_arrow_right"
            android:layout_width="70dp"
            android:layout_height="40dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_plan_total"
            app:layout_constraintBottom_toBottomOf="@id/item_plan_flight"
            android:src="@mipmap/arrow_right"
    />

    <TextView
            android:id="@+id/item_plan_purpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/normal_tv_black"
            android:text="目的港"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintBottom_toBottomOf="@id/item_plan_bt_goodslist"
    />

    <Button android:id="@+id/item_plan_bt_goodslist"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            style="@style/button_gray_theme"
      app:layout_constraintTop_toBottomOf="@id/item_plan_arrow_right"
            app:layout_constraintRight_toRightOf="parent"
            android:text="货物清单"
    />

</android.support.constraint.ConstraintLayout>