<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/main_small"
>


    <TextView
            android:id="@+id/item_detail_main"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.21"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_small"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/small_tv_gray"
            android:text="826-56924545"
            android:ellipsize="middle"
            android:singleLine="true"
            app:layout_constraintLeft_toRightOf="@id/item_detail_hawb"
    />
    <TextView
            android:id="@+id/item_detail_hawb"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.21"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/item_detail_main"
            android:ellipsize="middle"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/main_small"
            style="@style/small_tv_gray"
            android:text="BSD58754545"
            app:layout_constraintLeft_toRightOf="@id/item_detail_main"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
    />


    <TextView
            android:id="@+id/item_detail_qty"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/item_detail_main"
            style="@style/normal_tv_primary"
            android:hint="0"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/main_small"
            app:layout_constraintLeft_toRightOf="@id/item_detail_hawb"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
    />

    <TextView
            android:id="@+id/item_detail_all_qty"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/item_detail_main"
            style="@style/small_tv_gray"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="30"
            app:layout_constraintLeft_toRightOf="@id/item_detail_qty"
    />


</android.support.constraint.ConstraintLayout>