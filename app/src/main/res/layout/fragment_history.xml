<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".history.HistoryFragment">

    <data>
        <variable name="historyViewModel" type="com.bondex.ysl.battledore.history.HistoryViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
                android:id="@+id/history_tv_rank"
                app:layout_constraintTop_toTopOf="@id/history_sp_sort"
                app:layout_constraintBottom_toBottomOf="@id/history_sp_sort"
                android:text="排序方式:"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <com.bondex.ysl.liblibrary.ui.SelectPopupWindow

                android:id="@+id/history_sp_sort"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"
                app:layout_constraintLeft_toRightOf="@id/history_tv_rank"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                app:layout_constraintWidth_percent="0.6"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0"
        >

        </com.bondex.ysl.liblibrary.ui.SelectPopupWindow>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/history_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintTop_toBottomOf="@id/history_sp_sort"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
        ></android.support.v7.widget.RecyclerView>


    </android.support.constraint.ConstraintLayout>


</layout>