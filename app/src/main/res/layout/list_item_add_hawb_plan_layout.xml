<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/margin_small"
android:background="@color/white_back"
>

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_add_hawb_ck_hawb"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/margin_small"
            android:theme="@style/primary_checkbox"
    >

    </CheckBox>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="4545655656565"
              style="@style/small_tv_primary"
              android:id="@+id/item_add_hawb_hawb"
              app:layout_constraintTop_toTopOf="@id/item_add_hawb_ck_hawb"
              android:layout_marginLeft="@dimen/activity_horizontal_margin"
              app:layout_constraintLeft_toRightOf="@id/item_add_hawb_ck_hawb"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="总件数 65  30kg  50m³"
              style="@style/small_tv_gray"
              android:id="@+id/item_add_hawb_qty"
              android:textAlignment="center"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintLeft_toRightOf="@id/item_add_hawb_flight"
              app:layout_constraintTop_toTopOf="@id/item_add_hawb_flight"
              app:layout_constraintBottom_toBottomOf="@id/item_add_hawb_flight"
    />


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="MN454587"
              style="@style/small_tv_black"
              android:layout_marginTop="@dimen/margin_small"
              android:id="@+id/item_add_hawb_flight"
              app:layout_constraintTop_toBottomOf="@id/item_add_hawb_hawb"
              app:layout_constraintLeft_toLeftOf="@id/item_add_hawb_hawb"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="DWS"
              app:layout_constraintWidth_percent="0.2"
              style="@style/small_tv_black"
              android:textAlignment="center"
              app:layout_constraintLeft_toRightOf="@id/item_add_hawb_hawb"
              android:id="@+id/item_add_hawb_destination"
              app:layout_constraintTop_toTopOf="@id/item_add_hawb_hawb"
              app:layout_constraintBottom_toBottomOf="@id/item_add_hawb_hawb"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginRight="@dimen/activity_horizontal_margin"
    />

    <com.bondex.ysl.liblibrary.ui.IconText
            android:id="@+id/item_add_hawb_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/item_add_hawb_hawb"
            app:layout_constraintBottom_toBottomOf="@id/item_add_hawb_hawb"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/icon_gray"
            android:text="@string/delete"
            android:textColor="@color/colorPrimary"
    />

</android.support.constraint.ConstraintLayout>