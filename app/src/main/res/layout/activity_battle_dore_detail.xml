<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".bddetailbench.bddetailBetchActivity">

    <data>
        <variable name="battleDoreDetail" type="com.bondex.ysl.battledore.battledoredetail.BattleDoreDetailViewModel"/>

    </data>


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >


        <include android:id="@+id/title" layout="@layout/base_title"></include>

        <TextView
                android:id="@+id/bddetail_plate_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:minWidth="@dimen/min_width"
                app:met_floatingLabel="normal"
                style="@style/normal_tv_red"
                app:met_underlineColor="@color/rect_red"
                android:hint="板号"
                android:layout_marginTop="@dimen/main_small"
                app:layout_constraintTop_toBottomOf="@id/title"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
        />


        <TextView
                android:id="@+id/bddetail_plate_unit"
                style="@style/normal_tv_gray"
                android:text="板型:大"
                app:layout_constraintLeft_toRightOf="@id/bddetail_plate_num"
                app:layout_constraintTop_toTopOf="@id/bddetail_plate_num"
                android:layout_width="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/bddetail_plate_num"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.3"
        />


        <TextView
                android:id="@+id/bddetail_protect_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/bddetail_plate_num"
                style="@style/small_tv_gray"
                app:layout_constraintTop_toBottomOf="@id/bddetail_plate_unit"
                android:layout_marginTop="@dimen/main_small"

                android:text="保护类型: 单件保护   0"
        />

        <TextView
                android:id="@+id/bddetail_battle_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/bddetail_protect_unit"
                app:layout_constraintLeft_toLeftOf="@id/bddetail_plate_num"
                style="@style/normal_tv_gray"
                android:text="   打板日期    "
                android:layout_marginTop="@dimen/main_small"

                app:met_floatingLabel="normal"
                android:background="@drawable/editext_empty_gary"
                android:padding="@dimen/main_small"
                android:focusable="false"
                android:paddingHorizontal="@dimen/activity_horizontal_margin"
        />

        <TextView
                android:id="@+id/bddetail_pickup_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/bddetail_protect_unit"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                style="@style/normal_tv_gray"
                android:layout_marginTop="@dimen/main_small"

                android:hint="   提货日期    "
                android:focusable="false"
                app:met_floatingLabel="normal"
                android:background="@drawable/editext_empty_gary"
                android:padding="@dimen/main_small"
                android:paddingHorizontal="@dimen/activity_horizontal_margin"
        />

        <TextView
                android:id="@+id/bddetail_subplate_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/normal_tv_gray"
                android:text="垫板类型:老大垫 1"
                app:layout_constraintTop_toBottomOf="@id/bddetail_battle_date"
                android:layout_marginTop="@dimen/main_small"

                app:layout_constraintLeft_toLeftOf="@id/bddetail_plate_num"
        />


        <TextView
                android:id="@+id/bddetail_unit_main"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/main_small"

                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/bddetail_subplate_unit"
                app:layout_constraintLeft_toLeftOf="@id/bddetail_plate_num"
                style="@style/normal_tv_red"
                android:text="主单号"
        />


        <TextView
                android:id="@+id/bddetail_unit_hawb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/bddetail_unit_main"
                style="@style/normal_tv_red"
                android:text="分单号"
                app:layout_constraintLeft_toRightOf="@id/bddetail_unit_main"
                app:layout_constraintRight_toLeftOf="@id/bddetail_unit_qty"
        />


        <TextView
                android:id="@+id/bddetail_unit_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/bddetail_unit_main"
                style="@style/normal_tv_red"
                android:text="件数"
                app:layout_constraintLeft_toRightOf="@id/bddetail_unit_hawb"
                app:layout_constraintRight_toRightOf="@id/bddetail_unit_all_qty"
        />


        <TextView
                android:id="@+id/bddetail_unit_all_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/bddetail_unit_main"
                style="@style/normal_tv_red"
                android:text="总件数"
                app:layout_constraintLeft_toRightOf="@id/bddetail_unit_qty"
                app:layout_constraintRight_toLeftOf="@id/bddetail_unit_all_flight"
        />


        <TextView
                android:id="@+id/bddetail_unit_all_flight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/bddetail_unit_main"
                style="@style/normal_tv_red"
                android:text="航班号"
                app:layout_constraintLeft_toRightOf="@id/bddetail_unit_all_qty"
                app:layout_constraintRight_toRightOf="parent"

        />

        <android.support.v7.widget.RecyclerView
                android:id="@+id/bddetail_recycleview"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/bddetail_unit_main"
                android:layout_height="0dp"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
        ></android.support.v7.widget.RecyclerView>


    </android.support.constraint.ConstraintLayout>

</layout>