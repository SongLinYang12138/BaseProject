<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".misssion.MissionFragment">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_gray"
    >


        <com.bondex.ysl.liblibrary.ui.IconText
                android:id="@+id/mission_it_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/mission_workbetch"
                app:layout_constraintBottom_toBottomOf="@id/mission_workbetch"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                style="@style/icon_gray"
                android:text="@string/camera"
                android:padding="8dp"
                android:textColor="@color/colorPrimary"
        />


        <Button
                android:id="@+id/mission_workbetch"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/item_mission_ck_all"
                android:background="@color/colorPrimary"
                app:layout_constraintRight_toLeftOf="@id/mission_it_camera"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="编辑"
                style="@style/button_primary_theme"
        >
        </Button>


        <CheckBox
                android:id="@+id/item_mission_ck_all"
                android:layout_width="wrap_content"
                android:theme="@style/primary_checkbox"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toTopOf="@id/mission_workbetch"
                app:layout_constraintBottom_toBottomOf="@id/mission_workbetch"
                android:layout_height="wrap_content"

        />

        <com.bondex.ysl.battledore.ui.MenuList
                android:id="@+id/mission_menulist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/activity_horizontal_margin"
                android:background="@color/white_back"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@id/mission_workbetch"

        >

        </com.bondex.ysl.battledore.ui.MenuList>

        <com.bondex.ysl.liblibrary.ui.SearchView
                android:id="@+id/mission_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/paddingVertical"
                app:layout_constraintTop_toBottomOf="@id/mission_menulist"
        >


        </com.bondex.ysl.liblibrary.ui.SearchView>


        <ListView
                android:id="@+id/mission_expand_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:divider="@color/colorWhite"
                android:dividerHeight="@dimen/activity_horizontal_margin"
                android:background="@color/white_back"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintTop_toBottomOf="@id/mission_search"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/activity_horizontal_margin"></ListView>


    </android.support.constraint.ConstraintLayout>

</layout>