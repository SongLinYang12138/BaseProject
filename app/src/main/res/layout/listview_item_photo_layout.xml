<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/item_photo_iv"
            android:layout_width="100dp"
            android:layout_height="160dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@mipmap/login_icon"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/margin_small"
    />
    <TextView
            android:id="@+id/item_photo_hwab"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/item_photo_iv"
            app:layout_constraintRight_toRightOf="@id/item_photo_iv"
            app:layout_constraintTop_toBottomOf="@id/item_photo_iv"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_height="wrap_content"
            style="@style/normal_tv_gray"
    />
    <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/item_photo_ck"
            app:layout_constraintTop_toTopOf="@id/item_photo_iv"
            app:layout_constraintRight_toRightOf="@id/item_photo_iv"
            android:layout_width="wrap_content"
            android:theme="@style/white_checkbox"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
    />


</android.support.constraint.ConstraintLayout>