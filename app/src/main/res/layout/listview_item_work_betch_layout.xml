<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:paddingVertical="@dimen/main_small"
>
    <TextView
            android:id="@+id/item_workbetch_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/normal_tv_gray"
            android:text="826-56924545"
            android:layout_marginLeft="@dimen/main_small"
    />
    <TextView
            android:id="@+id/item_workbetch_hawb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/item_workbetch_main"
            style="@style/normal_tv_gray"
            android:text="BSD58754545"
            app:layout_constraintRight_toLeftOf="@id/item_workbetch_qty"
    />


    <EditText
            android:id="@+id/item_workbetch_qty"
            android:layout_width="40dp"
            android:layout_height="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/item_workbetch_hawb"
            style="@style/normal_tv_gray"
            android:background="@drawable/rect_gray"
            android:hint="0"
            android:inputType="number"
            app:layout_constraintRight_toLeftOf="@id/item_workbetch_all_qty"
    />

    <TextView
            android:id="@+id/item_workbetch_all_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/item_workbetch_qty"
            style="@style/normal_tv_gray"
            android:text="20"
            app:layout_constraintRight_toLeftOf="@id/item_workbetch_flight"
    />


    <TextView
            android:id="@+id/item_workbetch_flight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/item_workbetch_all_qty"
            style="@style/normal_tv_gray"
            android:text="CH5468"
            app:layout_constraintRight_toRightOf="parent"
    />
</android.support.constraint.ConstraintLayout>