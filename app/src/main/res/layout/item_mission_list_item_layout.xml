<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:paddingVertical="@dimen/main_small"
                                             android:paddingHorizontal="@dimen/activity_horizontal_margin"
>

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_mission_ck_hawb"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"


    ></CheckBox>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="分单号:4545655656565"
              style="@style/small_tv_black"
              android:id="@+id/item_mission_hawb"
              app:layout_constraintTop_toTopOf="@id/item_mission_ck_hawb"
              app:layout_constraintBottom_toBottomOf="@id/item_mission_ck_hawb"
              app:layout_constraintLeft_toRightOf="@id/item_mission_ck_hawb"
              app:layout_constraintRight_toLeftOf="@id/item_mission_qty"
    android:layout_marginLeft="-15dp"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="65"
              style="@style/small_tv_black"
              android:id="@+id/item_mission_qty"
              app:layout_constraintTop_toTopOf="@id/item_mission_ck_hawb"
              app:layout_constraintBottom_toBottomOf="@id/item_mission_ck_hawb"

              app:layout_constraintLeft_toRightOf="@id/item_mission_hawb"
              app:layout_constraintRight_toLeftOf="@id/item_mission_flight"
    />


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="MN454587"
              style="@style/small_tv_black"
              android:id="@+id/item_mission_flight"
              app:layout_constraintTop_toTopOf="@id/item_mission_ck_hawb"
              app:layout_constraintBottom_toBottomOf="@id/item_mission_ck_hawb"
              app:layout_constraintLeft_toRightOf="@id/item_mission_qty"
              app:layout_constraintRight_toRightOf="parent"
    />

</android.support.constraint.ConstraintLayout>