<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:background="@color/background_gray"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:paddingVertical="@dimen/activity_margin"
>

    <CheckBox android:layout_width="33dp"
              android:layout_height="27dp"
              android:id="@+id/item_list_ck"
              android:theme="@style/primary_checkbox"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:id="@+id/item_list_board_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/normal_tv_primary"
            android:text="未完成"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />


    <TextView
            android:id="@+id/item_list_board"

            app:layout_constraintTop_toTopOf="@id/item_list_board_status"
            app:layout_constraintBottom_toBottomOf="@id/item_list_board_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_small"
            style="@style/normal_tv_black"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="板号"
            app:layout_constraintLeft_toRightOf="@id/item_list_ck"/>

    <TextView
            android:id="@+id/item_list_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/item_list_board_status"
            app:layout_constraintLeft_toRightOf="@id/item_list_board"
            app:layout_constraintRight_toLeftOf="@id/item_list_board_status"
            style="@style/normal_tv_primary"
            android:text="3M4H "
            android:textStyle="bold"
    />

    <TextView
            android:id="@+id/item_list_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/small_tv_gray"
app:layout_constraintTop_toTopOf="@id/item_list_board_status"
            app:layout_constraintBottom_toBottomOf="@id/item_list_board_status"
            android:text="(3件)"
            app:layout_constraintLeft_toRightOf="@id/item_list_count"
    />


    <TextView
            android:id="@+id/item_list_purpose"

            app:layout_constraintTop_toTopOf="@id/item_list_flight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/small_tv_black"
            android:text="(LUX/0709)"
            app:layout_constraintLeft_toRightOf="@id/item_list_flight"
    />

    <TextView
            android:id="@+id/item_list_flight"
            app:layout_constraintTop_toBottomOf="@id/item_list_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/small_tv_black"
            android:text="SC4357"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintLeft_toLeftOf="@id/item_list_board"


    />


    <TextView
            android:id="@+id/item_list_board_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/small_tv_gray"
            android:text="打板日期:2019-06-06 15:54"
            android:layout_marginTop="@dimen/main_small"
            app:layout_constraintTop_toBottomOf="@id/item_list_board"
            app:layout_constraintLeft_toRightOf="@id/item_list_purpose"
            android:layout_marginLeft="@dimen/activity_margin"
app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
    />


</android.support.constraint.ConstraintLayout>