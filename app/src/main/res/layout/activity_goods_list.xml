<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".goodslist.GoodsListActivity">

    <data>
        <variable name="goodsListViewModel" type="com.bondex.ysl.battledore.goodslist.GoodsListViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <include android:id="@+id/title" layout="@layout/base_title"></include>

        <TextView
                android:id="@+id/goodsl_tv_maincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/normal_tv_red"
                android:text="主单号"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
        />

        <TextView
                android:id="@+id/goodsl_tv_hawb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/normal_tv_red"
                android:text="分单单号"
                app:layout_constraintLeft_toRightOf="@id/goodsl_tv_maincode"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintTop_toTopOf="@id/goodsl_tv_maincode"
                app:layout_constraintRight_toLeftOf="@id/goodsl_tv_qty"
        />


        <TextView
                android:id="@+id/goodsl_tv_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/normal_tv_red"
                android:text="总件数"
                app:layout_constraintLeft_toRightOf="@id/goodsl_tv_hawb"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintTop_toTopOf="@id/goodsl_tv_maincode"
                app:layout_constraintRight_toLeftOf="@id/goodsl_tv_flight"
        />


        <TextView
                android:id="@+id/goodsl_tv_flight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/normal_tv_red"
                android:text="航班号"
                app:layout_constraintLeft_toRightOf="@id/goodsl_tv_qty"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintTop_toTopOf="@id/goodsl_tv_maincode"
                app:layout_constraintRight_toRightOf="parent"
        />

        <android.support.v7.widget.RecyclerView
                android:id="@+id/goodsl_recylerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@id/goodsl_tv_maincode"
                app:layout_constraintBottom_toTopOf="@id/goodsl_bt_cancel"
        ></android.support.v7.widget.RecyclerView>


        <CheckBox
                android:id="@+id/goodsl_ck_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/goodsl_bt_cancel"
                app:layout_constraintBottom_toBottomOf="@id/goodsl_bt_cancel"
                app:layout_constraintLeft_toLeftOf="parent"
        />


        <com.gc.materialdesign.views.ButtonRectangle
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/goodsl_bt_cancel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@color/metal_gray"
                app:layout_constraintRight_toLeftOf="@id/goodsl_bt_add"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/normal_tv_gray"
                    android:text="取消打板"
                    android:layout_centerInParent="true"
                    android:paddingHorizontal="@dimen/activity_horizontal_margin"

            />

        </com.gc.materialdesign.views.ButtonRectangle>

        <com.gc.materialdesign.views.ButtonRectangle
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:id="@+id/goodsl_bt_add"
                app:layout_constraintBottom_toBottomOf="@id/goodsl_bt_cancel"
                android:background="@color/colorPrimary"
                app:layout_constraintLeft_toRightOf="@id/goodsl_bt_cancel"
                app:layout_constraintRight_toRightOf="parent"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/normal_tv_white"
                    android:paddingHorizontal="@dimen/activity_horizontal_margin"
                    android:text="新增打板"
                    android:layout_centerInParent="true"
            />

        </com.gc.materialdesign.views.ButtonRectangle>

    </android.support.constraint.ConstraintLayout>

</layout>