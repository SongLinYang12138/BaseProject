<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/margin_small"
        tools:ignore="MissingDefaultResource"
        android:background="@drawable/edit_middle"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
>

    <TextView
            android:id="@+id/item_detail_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_detail_tv_count"
            app:layout_constraintBottom_toBottomOf="@id/item_detail_tv_count"
            style="@style/normal_tv_gray"

            android:text="大件"
    />

    <TextView
            android:id="@+id/item_detail_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/normal_tv_primary"
            android:text="2"
            android:layout_marginLeft="@dimen/paddingVertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/item_detail_tv_name"
    />

</android.support.constraint.ConstraintLayout>