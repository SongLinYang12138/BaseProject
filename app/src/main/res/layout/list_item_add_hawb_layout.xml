<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/margin_small"
        android:background="@color/white_back"
>

    <android.support.v7.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_add_hawb_ck_hawb"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/margin_small"
            android:theme="@style/primary_checkbox"
    >

    </android.support.v7.widget.AppCompatCheckBox>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="785-5454"
              android:maxWidth="@dimen/min_width"
              style="@style/small_tv_primary"
              android:id="@+id/item_add_hawb_mhawb"
              android:textStyle="bold"
              app:layout_constraintTop_toTopOf="@id/item_add_hawb_ck_hawb"
              android:layout_marginLeft="@dimen/activity_horizontal_margin"
              app:layout_constraintLeft_toRightOf="@id/item_add_hawb_ck_hawb"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxWidth="@dimen/min_width"
              android:text="4545"
              android:layout_marginLeft="@dimen/activity_horizontal_margin" app:layout_constraintWidth_percent="0.2"
              style="@style/small_tv_primary"
              android:textAlignment="center"
              app:layout_constraintLeft_toRightOf="@id/item_add_hawb_mhawb"
              android:id="@+id/item_add_hawb_hawb"
              app:layout_constraintTop_toTopOf="@id/item_add_hawb_mhawb"
              app:layout_constraintBottom_toBottomOf="@id/item_add_hawb_mhawb"
    />
    <TextView
            android:id="@+id/item_add_hawb_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-01-02"
            app:layout_constraintTop_toTopOf="@id/item_add_hawb_mhawb"
            app:layout_constraintBottom_toBottomOf="@id/item_add_hawb_mhawb"
            style="@style/small_tv_gray"
            app:layout_constraintRight_toLeftOf="@id/line1"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="总件数 65  30kg  50m³"
              style="@style/small_tv_gray"
              android:id="@+id/item_add_hawb_qty"
              android:textAlignment="center"
              app:layout_constraintRight_toRightOf="@id/item_add_hawb_date"
              app:layout_constraintBottom_toBottomOf="@id/item_add_hawb_flight"
    />


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="MN454587(LDU)"
              style="@style/small_tv_black"
              android:layout_marginTop="@dimen/margin_small"
              android:id="@+id/item_add_hawb_flight"
              app:layout_constraintTop_toBottomOf="@id/item_add_hawb_hawb"
              app:layout_constraintLeft_toLeftOf="@id/item_add_hawb_mhawb"
    />
    <View android:layout_width="1dp"
          android:layout_height="0dp"
          app:layout_constraintRight_toLeftOf="@id/item_add_hawb_delete"
          android:layout_marginRight="@dimen/activity_horizontal_margin"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:id="@+id/line1"
          android:background="@color/metal_gray"
          app:layout_constraintHorizontal_weight="1">
    </View>


    <com.bondex.ysl.liblibrary.ui.IconText
            android:id="@+id/item_add_hawb_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/icon_gray"
            android:text="@string/add"
            android:textColor="@color/colorPrimary"
    />

</android.support.constraint.ConstraintLayout>