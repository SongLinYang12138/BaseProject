<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".plan.PlanFragment">

    <data>
        <variable name="planViewModel"
                  type="com.bondex.ysl.battledore.plan.PlanViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_gray"
    >


        <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/plan_ck_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toTopOf="@id/plan_bt"
                android:theme="@style/primary_checkbox"
                app:layout_constraintBottom_toBottomOf="@id/plan_bt"
        />

        <Button
                android:id="@+id/plan_bt_create"
                android:layout_marginTop="@dimen/paddingVertical"
                style="@style/button_gray_theme"
                app:layout_constraintTop_toTopOf="parent"
                android:text="打板任务"
                app:layout_constraintLeft_toRightOf="@id/plan_ck_all"
                app:layout_constraintRight_toLeftOf="@id/plan_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/plan_bt"
                style="@style/button_primary_theme"
                app:layout_constraintTop_toTopOf="@id/plan_bt_create"
                android:text="编辑"
                app:layout_constraintLeft_toRightOf="@id/plan_bt_create"
                app:layout_constraintRight_toLeftOf="@id/plan_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <com.bondex.ysl.liblibrary.ui.IconText
                android:id="@+id/plan_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/icon_gray"
                android:text="@string/camera"
                android:padding="8dp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toTopOf="@id/plan_bt"
                app:layout_constraintBottom_toBottomOf="@id/plan_bt"

        />

        <com.bondex.ysl.battledore.ui.MenuList
                android:id="@+id/plan_menu"
                android:layout_width="match_parent"
                android:paddingVertical="@dimen/margin_small"
                android:background="@color/white_back"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/plan_bt"

                android:layout_marginTop="@dimen/padding_large"
        ></com.bondex.ysl.battledore.ui.MenuList>

        <com.bondex.ysl.liblibrary.ui.SearchView
                android:id="@+id/plan_search"
                app:layout_constraintTop_toBottomOf="@id/plan_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large"
                android:background="@drawable/edit_middle"
        >
        </com.bondex.ysl.liblibrary.ui.SearchView>


        <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/plan_smart_refresh"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintTop_toBottomOf="@id/plan_search"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/padding_large"
                tools:layout_editor_absoluteX="0dp" app:layout_constraintVertical_bias="1.0">

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/plan_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white_back"
                    android:clickable="false"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
            ></android.support.v7.widget.RecyclerView>

            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    </android.support.constraint.ConstraintLayout>


</layout>